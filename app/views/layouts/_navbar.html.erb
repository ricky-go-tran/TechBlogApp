<div class="navbar-wrapper">
  <div class="left-navbar">
    <div class="logo">TechBlog</div>
    <div class="menu">
      <%= link_to "Home", articles_path, class: "item"%>
      <%= link_to "Author", "/authors", class: "item"%>
      <%= link_to "About", articles_path, class: "item"%>
      <%= link_to "Support", articles_path, class: "item"%>
    </div>
    <input type="text" class="search-bar" placeholder="Search articles..."/>
  </div>
  <div class="right-navbar">
    <% if user_signed_in?%>
      <div class="username" data-controller="navigation" data-navigation-target="path" data-action="click->navigation#navigate" data-content="/manager" >
        <%= current_user.fullname %>
      </div>
      <%=button_to "Logout" , destroy_user_session_path,  :method => :delete,class: "logout", form_class: "logout-form"%>
    <% else%>
      <%= link_to "Login", new_user_session_path, class: "login"%>
      <%= link_to "Signup", new_user_registration_path, class: "signup"%>
    <% end%>
  </div>
</div>
